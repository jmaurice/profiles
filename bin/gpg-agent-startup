# start gpg-agent if not already running
test -f $HOME/.gpg-agent-info && source $HOME/.gpg-agent-info
if kill -0 `head -1 $HOME/.gpg-agent-info|cut -d : -f2` 2>/dev/null; then
	sleep 0.$RANDOM # hack to avoid race condition
	eval `/usr/local/MacGPG2/bin/gpg-agent --daemon --write-env-file --enable-ssh-support`
fi

# export variables to environment
export GPG_AGENT_INFO
export SSH_AUTH_SOCK
export SSH_AGENT_PID
export GPG_TTY=`tty`

#!/usr/bin/env zsh

setxkbmap jp
setxkbmap -option ctrl:nocaps

xbindkeys_autostart

# load settings
xfsettingsd &

# transparency
xcompmgr &

# network manager widget
nm-applet &

# sound widget
kmix &

# multi-touch trackpad gestures
touchegg &

# japanese ime
(sleep 5 ; ibus-daemon --daemonize --xim) &

# power management
xfce4-power-manager &

# start awesome wm
exec ck-launch-session dbus-launch awesome 2>&1 > $HOME/.xsession-errors
